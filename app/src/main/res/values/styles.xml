<resources>

    <!-- application themes -->
    <style name="ConverterHomeTheme" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/HomeScreenActionBar</item>
        <item name="android:colorPrimary">@color/greenBackground</item>
        <item name="android:colorPrimaryDark">@color/darkGreenBackground</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemperatureTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TemperatureActionBar</item>
    </style>

    <style name="WeightTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WeightActionBar</item>
    </style>

    <style name="LengthTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/LengthActionBar</item>
    </style>

    <style name="VolumeTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/VolumeActionBar</item>
    </style>

    <style name="SpeedTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SpeedActionBar</item>
    </style>

    <style name="TimeTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TimeActionBar</item>
    </style>

    <style name="AreaTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AreaActionBar</item>
    </style>

    <!-- styles -->

    <style name="HomeScreenActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/greenBackground</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TemperatureActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkBlueBackground</item>
    </style>

    <style name="WeightActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkPurpleBackground</item>
    </style>

    <style name="LengthActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkRedBackground</item>
    </style>

    <style name="VolumeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkGreenSeaBackground</item>
    </style>

    <style name="SpeedActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkPumpkinBackground</item>
    </style>

    <style name="TimeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkRedBackground</item>
    </style>

    <style name="AreaActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkBlueBackground</item>
    </style>
</resources>
