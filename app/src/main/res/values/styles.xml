<resources>

    <!-- application themes -->
    <style name="ConverterHomeTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/MyOverflow</item>

        <item name="actionBarStyle">@style/HomeScreenActionBar</item>

        <item name="android:colorPrimary">@color/asbestos</item>
        <item name="android:colorPrimaryDark">@color/concrete</item>
        <item name="android:navigationBarColor">@color/concrete</item>
    </style>

    <style name="TemperatureTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TemperatureActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TemperatureActionBar</item>

        <item name="android:colorPrimary">@color/blueBackground</item>
        <item name="android:colorPrimaryDark">@color/darkBlueBackground</item>
        <item name="android:navigationBarColor">@color/darkBlueBackground</item>
    </style>

    <style name="WeightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WeightActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/WeightActionBar</item>

        <item name="android:colorPrimary">@color/purpleBackground</item>
        <item name="android:colorPrimaryDark">@color/darkPurpleBackground</item>
        <item name="android:navigationBarColor">@color/darkPurpleBackground</item>
    </style>

    <style name="LengthTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/LengthActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/LengthActionBar</item>

        <item name="android:colorPrimary">@color/orange</item>
        <item name="android:colorPrimaryDark">@color/carrot</item>
        <item name="android:navigationBarColor">@color/carrot</item>
    </style>

    <style name="VolumeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/VolumeActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/VolumeActionBar</item>

        <item name="android:colorPrimary">@color/greenSeaBackground</item>
        <item name="android:colorPrimaryDark">@color/darkGreenSeaBackground</item>
        <item name="android:navigationBarColor">@color/darkGreenSeaBackground</item>
    </style>

    <style name="TimeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TimeActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TimeActionBar</item>

        <item name="android:colorPrimary">@color/pumpkinBackground</item>
        <item name="android:colorPrimaryDark">@color/pomegranate</item>
        <item name="android:navigationBarColor">@color/pomegranate</item>
    </style>

    <style name="AreaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AreaActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AreaActionBar</item>

        <item name="android:colorPrimary">@color/cyanBackground</item>
        <item name="android:colorPrimaryDark">@color/darkCyanBackground</item>
        <item name="android:navigationBarColor">@color/darkCyanBackground</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/HomeScreenActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/HomeScreenActionBar</item>

        <item name="colorPrimary">@color/greenBackground</item>
        <item name="colorPrimaryDark">@color/asbestos</item>
        <item name="android:navigationBarColor">@color/asbestos</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back</item>
    </style>

    <!-- styles -->

    <style name="HomeScreenActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/whiteBackground</item>
        <item name="titleTextStyle">@style/HomeTheme_ActionBar_Title</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TemperatureActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blueBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/blueBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="WeightActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/purpleBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/purpleBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="LengthActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange</item>
        <!-- Support library compatibility -->
        <item name="background">@color/orange</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="VolumeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/greenSeaBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/greenSeaBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="SpeedActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/pumpkinBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/pumpkinBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="TimeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/alizarin</item>
        <!-- Support library compatibility -->
        <item name="background">@color/alizarin</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="AreaActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cyanBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/cyanBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="AppTheme_ActionBar_Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeTheme_ActionBar_Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/asbestos</item>
    </style>

    <style name="SettingsActionBar" parent="@style/HomeScreenActionBar"></style>

    <style name="MyOverflow" parents="Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_navigation_more_vert</item>
    </style>
</resources>
