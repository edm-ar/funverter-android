    <style name="SpeedActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/pumpkinBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/pumpkinBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="TimeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/alizarin</item>
        <!-- Support library compatibility -->
        <item name="background">@color/alizarin</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="AreaActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cyanBackground</item>
        <!-- Support library compatibility -->
        <item name="background">@color/cyanBackground</item>

        <item name="android:elevation">4dp</item>
        <item name="android:titleTextStyle">@style/AppTheme_ActionBar_Title</item>
    </style>

    <style name="AppTheme_ActionBar_Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeTheme_ActionBar_Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whiteBackground</item>
    </style>

    <style name="SettingsActionBar" parent="@style/HomeScreenActionBar"></style>

    <style name="MyOverflow" parents="Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_navigation_more_vert</item>
    </style>
</resources>
