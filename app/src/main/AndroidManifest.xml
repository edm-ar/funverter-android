<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="basic.converters.apps.basicunitconverter" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".BasicUnitConverterActivity"
            android:label="@string/app_name"
            android:theme="@style/ConverterHomeTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="basic.converters.preferences.SettingsActivity"
            android:label="@string/action_settings"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".TemperatureConverterActivity"
            android:label="@string/title_activity_temperature_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/TemperatureTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_temperature">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".WeightConverterActivity"
            android:label="@string/title_activity_weight_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/WeightTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_weight">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".LengthConverterActivity"
            android:label="@string/title_activity_length_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/LengthTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_length">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".VolumeConverterActivity"
            android:label="@string/title_activity_volume_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/VolumeTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_volume">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".TimeConverterActivity"
            android:label="@string/title_activity_time_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/TimeTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_time">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".AreaConverterActivity"
            android:label="@string/title_activity_area_converter"
            android:launchMode="singleInstance"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/AreaTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:icon="@drawable/ic_area">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
    </application>

</manifest>
