<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="basic.converters.apps.basicunitconverter" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".BasicUnitConverterActivity"
            android:label="@string/app_name"
            android:theme="@style/ConverterHomeTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="basic.converters.preferences.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".TemperatureConverterActivity"
            android:label="@string/title_activity_temperature_converter"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/TemperatureTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".WeightConverterActivity"
            android:label="@string/title_activity_weight_converter"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/WeightTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".DistanceConverterActivity"
            android:label="@string/title_activity_distance_converter"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/DistanceTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".VolumeConverterActivity"
            android:label="@string/title_activity_volume_converter"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/VolumeTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".TimeConverterActivity"
            android:label="@string/title_activity_time_converter"
            android:parentActivityName=".BasicUnitConverterActivity"
            android:theme="@style/TimeTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:launchMode="singleInstance">

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="basic.converters.apps.basicunitconverter.BasicUnitConverterActivity" />
        </activity>
        <activity
            android:name=".CurrencyConverterActivity"
            android:label="@string/title_activity_currency_converter"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>
